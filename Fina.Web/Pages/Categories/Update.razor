@page "/categorias/editar/{IdCategory:int}"
@inherits UpdateCategoryPage

<MudText Typo="Typo.h3">Editar Categoria</MudText>

<MudPaper Class="pa-8 mt-4">
    <EditForm Model="@Category" OnValidSubmit="OnValidSubmitAsync">
        <DataAnnotationsValidator />
        <MudText Label="ID"
                 @bind-Value="Category.Id"
                 For="@(() => Category.Id)" />

        <MudTextField Label="Título"
                      HelperText="Campo obrigatório"
                      @bind-Value="Category.Title"
                      For="@(() => Category.Title)" />

        <MudTextField Label="Descrição"
                      Lines="5"
                      HelperText="Campo obrigatório"
                      @bind-Value="Category.Description"
                      For="@(() => Category.Description)" />

        @if (IsBusy)
        {
            <MudProgressCircular Indeterminate="true" Color="Color.Primary" />
        }
        else
        {
            <MudButton ButtonType="ButtonType.Submit"
                       Variant="Variant.Filled"
                       Color="Color.Primary">
                Salvar
            </MudButton>
        }
    </EditForm>
</MudPaper>