@page "/categorias"
@inherits GetAllCategoriesPage

<MudText Typo="Typo.h3">Categorias</MudText>
<div class="d-flex justify-end">
    <MudButton Variant="Variant.Filled"
               Color="Color.Primary"
               StartIcon="@Icons.TwoTone.Add"
               Href="/categorias/adicionar">
        NOVA CATEGORIA
    </MudButton>
</div>

<MudDataGrid Class="mt-4"
             Items="@Categories"
             Filterable="true">
    <Columns>
        <PropertyColumn Property="x => x.Id" Title="#" />
        <PropertyColumn Property="x => x.Title" Title="Categoria" />
        <PropertyColumn Property="x => x.Description" Title="Descrição" />
        <TemplateColumn Filterable="false" Sortable="false">
            <CellTemplate>
                <MudIconButton Icon="@Icons.Material.Filled.Delete"
                               Color="Color.Error"
                               OnClick="() => OnDeleteButtonClickedAsync(context.Item.Id, context.Item.Title)" />
            </CellTemplate>
        </TemplateColumn>
        <TemplateColumn Filterable="false" Sortable="false">
            <CellTemplate>
                <MudIconButton Icon="@Icons.Material.Filled.Edit"
                                Color="Color.Default"
                               Href=@($"/categorias/editar/{context.Item.Id}") />
            </CellTemplate>
        </TemplateColumn>
    </Columns>
</MudDataGrid>